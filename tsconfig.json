{
  "compilerOptions": {
    "target": "ES2022",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node",
      "vite/client"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true
  },
  "include": [
    "App.tsx",
    "index.tsx",
    "types.ts",
    "components/**/*",
    "services/**/*",
    "context/**/*",
    "hooks/**/*",
    "utils/**/*",
    "design-system/**/*"
  ],
  "exclude": [
    "node_modules",
    "server/**/*",
    "supabase/functions/**/*",
    "tests/**/*",
    "**/__tests__/**/*",
    "scripts/**/*",
    "vite.config.ts",
    "playwright.config.ts",
    "vitest.config.ts",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}